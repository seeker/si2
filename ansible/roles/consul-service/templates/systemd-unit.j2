[Unit]
Description="HashiCorp Consul - A service mesh solution"
Documentation=https://www.consul.io/
Requires=network-online.target
After=network-online.target

[Service]
{% if server %}
ExecStart=/usr/local/bin/consul agent -server -bootstrap-expect=1 -data-dir=/var/consul/ -ui -node={{ inventory_hostname }} -datacenter={{ datacenter }} -bind {{ consul_server }} -client {{ consul_server }}
{% else %}
ExecStart=/usr/local/bin/consul agent -data-dir=/var/consul/ -node={{ inventory_hostname }} -datacenter={{ datacenter }} -bind '{{ bind_ip }}' -join {{ consul_server }} -config-dir="/etc/consul.d"
{% endif %}
ExecReload=/usr/local/bin/consul reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
