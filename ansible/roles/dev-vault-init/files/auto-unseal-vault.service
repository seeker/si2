[Unit]
Description="Unseal the HashiCorp Vault"
After=vault.service
ConditionFileNotEmpty=/etc/vault.d/vault.hcl
StartLimitIntervalSec=60
StartLimitBurst=3

[Service]
User=vagrant
Group=vagrant
Type=oneshot
ExecStart=/home/vagrant/auto-unseal-vault.sh
RestartSec=1
StartLimitInterval=400
StartLimitBurst=10
